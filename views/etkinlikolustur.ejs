                <li class="nav-item">
                    <a href="http://localhost:3000/etkinlikleregozat">Etkinliklere Göz At</a>
                </li>


            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Ara" aria-label="Search" />
